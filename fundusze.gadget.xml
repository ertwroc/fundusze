<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
	<ModulePrefs title="hello world example" author="ERt" > 
		<Require feature="dynamic-height"/>
	</ModulePrefs>
	<UserPref name="funds" display_name="Fundusze" required="true" />
	<UserPref name="months" display_name="Ile ostatnich miesiÄ™cy" required="true" />
	<Content type="html">
		<![CDATA[
			<script src="http://ajax.googleapis.com/ajax/libs/dojo/1.6.0/dojo/dojo.xd.js"></script>

			<script type="text/javascript">
				dojo.require("dojo.date.locale");
				var prefs = new gadgets.Prefs();
				
				function resize() {
					gadgets.window.adjustHeight();
				}
				function createContent() {
					var months = prefs.getString("months");
					var chartDiv = document.getElementById('chart');
					var html = '<img border="0" alt="Notowanie" src="http://www.money.pl/u/chart_Inwestycyjne2.php?tow=__UP_funds__&period=' + months + '" title="Notowanie funduszu" />';
					chartDiv.innerHtml = html;
				}
				function gadgetLoaded() {
					dojo.ready(function(){
						createContent();
						resize();
					});
				}
				gadgets.util.registerOnLoadHandler(gadgetLoaded); 
			</script>
			Notowania funduszy<br/>
			<div id="chart"/>
			<img border="0" alt="XXX" src="http://www.money.pl/u/chart_Inwestycyjne2.php?tow=__UP_funds__.&date_from=2010-09-11&date_to=2011-09-11&period=3" title="Notowanie funduszu XXX" />
		]]>
	</Content> 
</Module>
